// $XKeyboardConfig: xkeyboard-config/symbols/capslock,v 1.4 2007-12-27 22:47:04 svu Exp $

default partial hidden modifier_keys
xkb_symbols "capslock" {
    key <CAPS> {	[	Caps_Lock		]	};
    modifier_map Lock { Caps_Lock };
};

partial hidden modifier_keys
xkb_symbols "shiftlock" {
    key <CAPS> {	[	Shift_Lock		]	};
    modifier_map Shift { Shift_Lock };
};

partial hidden modifier_keys
xkb_symbols "grouplock" {
    key <CAPS> {	[	ISO_Next_Group,	Caps_Lock	]	};
};

partial hidden modifier_keys
xkb_symbols "swapescape" {
    key <CAPS> {        [       Escape  ]       };
    key <ESC>  {        [     Caps_Lock    ]       };
};
